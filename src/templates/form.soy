{namespace components}

/**
 * Form: Input
 */
{template .formInput}
	{let $id: 'formInput' /}
	{let $title: 'Form: Input' /}
	{let $description: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Natus, labore.' /}
	{let $html kind="html"}
{literal}<form>
	<label for="example-input">Label</label>
	<input id="example-input" type="text" placeholder="Write something here...">
	<span class="form-field-aux">A block of auxiliar text</span>
</form>
{/literal}
	{/let}
	{let $snippet kind="text"}{$html}{/let}
	{call static.cell}
		{param id: $id /}
		{param title: $title /}
		{param description: $description /}
		{param snippet: $snippet /}
		{param html: $html /}
	{/call}
{/template}

